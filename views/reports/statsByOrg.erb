<%= erb :header_partial %>

<div class="row">
  <div class="col-lg-12">
    <h1>Vulnreport <small>Reports</small></h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/reports"><i class="fa fa-bar-chart-o"></i> Reports</a></li>
      <li class="active"><i class="fa fa-bar-chart-o"></i> Stats by Organization - <%=h(@org.name)%></li>
    </ol>
  </div>
</div><!-- /.row -->

<%= erb :"reports/datepicker_partial", :locals => {:showOrgOpt => true} %>

<div class="row" style="margin-top:-8px; margin-bottom:10px;">
  <div class="col-lg-12">
  	<h4>Organization Stats for <%=h(@org.name)%></h4>
  	<b>Tests Completed: </b><%=@totalTests%>&nbsp;&nbsp;&nbsp;&nbsp;
  	<b>Vulns Logged: </b><%=@totalVulns%>
  </div>
</div>


<div class="row" style="margin-top:20px; margin-bottom:10px;">
  <div class="col-lg-12">
  	<h4>Tests Completed</h4>
  	<canvas id='testGraph' width="1100px;" height="400px"></canvas>
  </div>
</div>

<div class="row" style="margin-top:20px; margin-bottom:10px;">
  <div class="col-lg-12">
  	<h4>Vulns Logged</h4>
  	<canvas id='vulnGraph' width="1100px;" height="400px"></canvas>
  </div>
</div>

<script type="text/javascript">
	var testData = {
		labels : [<%=("\"" + @labels.join("\",\"") + "\"")%>],
		datasets : [{
			label: 'Tests Completed',
			backgroundColor : 'rgba(151,187,205,1)',
      borderColor : 'rgba(151,187,205,1)',
			pointBackgroundColor : 'rgba(151,187,205,1)',
			pointBorderColor: '#FFF',
      fill: false,
      lineTension: 0,
			data : [<%=@testCounts.join(',')%>]
		 },
     {
      label: 'Sum Tests Completed',
      backgroundColor: 'rgba(230,230,230,0.75)',
      borderColor: 'rgba(230,230,230,0.75)',
      pointBackgroundColor: 'rgba(230,230,230,0.0)',
      pointBorderColor: 'rgba(230,230,230,0.0)',
      fill: true,
      lineTension: 0,
      data : [<%=@testSum.join(',')%>]
     }]
	};

	var vulnData = {
		labels : [<%=("\"" + @labels.join("\",\"") + "\"")%>],
		datasets : [{
			label: 'Vulnerabilities Logged',
			backgroundColor : 'rgba(151,187,205,1)',
      borderColor : 'rgba(151,187,205,1)',
			pointBackgroundColor : 'rgba(151,187,205,1)',
			pointBorderColor: '#FFF',
      fill: false,
      lineTension: 0,
			data : [<%=@vulnCounts.join(',')%>]
		 },{
      label: 'Sum Vulnerabilities Logged',
      backgroundColor: 'rgba(230,230,230,0.75)',
      borderColor: 'rgba(230,230,230,0.75)',
      pointBackgroundColor: 'rgba(230,230,230,0.0)',
      pointBorderColor: 'rgba(230,230,230,0.0)',
      fill: true,
      lineTension: 0,
      data : [<%=@vulnSum.join(',')%>]
     }]
	};

  var options = {
    scales: {
      yAxes: [{
        ticks: {
          beginAtZero: true
        }
      }]
    }
  };

  var testCtx = $('#testGraph').get(0).getContext('2d');
  var vulnCtx = $('#vulnGraph').get(0).getContext('2d');

  var testChart = new Chart(testCtx, {
    type: 'line',
    data: testData,
    options: options
  });

  var testChart = new Chart(vulnCtx, {
    type: 'line',
    data: vulnData,
    options: options
  });
</script>

<%= erb :footer_partial %>